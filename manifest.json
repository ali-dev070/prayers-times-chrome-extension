{
  "manifest_version": 3,
  "name": "Fianz prayer times today",
  "version": "1.0",
  "description": "Display the prayer times as of today.",
  "action": {
    "default_popup": "popup.html",
	"default_title": "Prayer Timings",
    "default_icon": {
      "19": "prayer_times.png",
      "38": "prayer_times.png"
    },
    "popup": {
      "width": 300,
      "height": 400
    }
  },
  "permissions": [
    "activeTab",
	"alarms"
  ],
  "host_permissions": [
	"https://api.aladhan.com/v1/*"
  ],
  "options_ui": {
	"page": "options.html"
  }

}